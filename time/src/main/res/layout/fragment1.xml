<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:padding="4dp"
    tools:context=".MainActivity">
    <com.example.time.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.time.TitleLayout>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:text="事件日期："
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/timeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/txt_time"
        android:textStyle="normal"
        android:textSize="15sp"
        android:background="@drawable/text_box"/>

    <Button
        android:id="@+id/btn_setDay"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/timeET"
        android:background="@drawable/btn_box"
        android:text="设置日期"
        android:textColor="#8B4513"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/txt_time"
        android:layout_marginTop="30dp"
        android:text="事件描述："
        android:textStyle="bold"
        android:textSize="15sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/txt_desc"
        android:layout_alignParentLeft="true"
        android:textStyle="italic"
        android:textSize="12sp"
        android:hint="譬如，我与她第一次踏上伊斯坦布尔"
        android:background="@drawable/text_box"/>
    <TextView
        android:id="@+id/txt_comDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_desc"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:text="纪念日："
        android:textStyle="bold"
        android:textSize="15sp"/>
    <RadioGroup
        android:id="@+id/btnX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_comDay"
        android:layout_below="@id/txt_desc"
        android:layout_marginTop="90dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btnX1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_background"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="14sp"
            android:button="@null"
            android:text="非纪念日" />

        <RadioButton
            android:id="@+id/btnX2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/radiobutton_background"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="14sp"
            android:text="每月纪念" />

        <RadioButton
            android:id="@+id/btnX3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radiobutton_background"
            android:textColor="@color/radiobutton_textcolor"
            android:textSize="14sp"
            android:text="每年纪念" />
    </RadioGroup>

    <TextView
        android:id="@+id/txt_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_comDay"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:text="提醒时间："
        android:textStyle="bold"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/set_remind"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@id/txt_comDay"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/txt_remind"
        android:entries="@array/remindArray"
        android:spinnerMode="dialog">
    </Spinner>

    <TextView
        android:id="@+id/txt_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_comDay"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:text="事件标签："
        android:textStyle="bold"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/set_tag"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@id/txt_comDay"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/txt_remind"
        android:entries="@array/tagArray"
        android:spinnerMode="dialog">
    </Spinner>


</RelativeLayout>